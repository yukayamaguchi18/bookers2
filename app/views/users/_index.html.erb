      <table class="table">
        <thead>
          <th><b>image</b></th>
          <th><b>name</b></th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <% users.each do |user| %>
            <tr>
              <td>
                <% if user.profile_image.attached? %>
                  <%= image_tag user.profile_image, size: "100x100" %>
                <% else %>
                  <%= image_tag 'default-image', size: "100x100" %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td>フォロー数:<span class="followings-count_<%= user.id %>"><%= render "relationships/followings-count", user: user %></span>
              </td>
              <td>フォロワー数:<span class="followers-count_<%= user.id %>"><%= render "relationships/followers-count", user: user %></span>
              </td>
              <td>
                <% unless user == current_user %>
                  <div class="follow-btn_<%= user.id %>">
                    <%= render "relationships/follow", user: user %>
                  </div>
                <% end %>
              </td>
              <td><%=link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
