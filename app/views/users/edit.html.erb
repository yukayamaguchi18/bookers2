<div class="container">
  <div class="col-6 mx-auto">
    <h1>User info</h1>
    <%= render "layouts/error", obj: @user %>
    <%= form_with model: @user do |f| %>
      <h4>Name</h4>
      <%= f.text_field :name %>
      <h4>Image</h4>
      <%= f.file_field :profile_image, accept: "image/*" %>
      <h4>Introduction</h4>
      <%= f.text_area :introduction %><br>
      <%= f.submit "Update User", :class => "btn btn-sm btn-secondary" %>
    <% end %>
  </div>
</div>
