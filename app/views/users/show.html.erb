<div class="container">
  <div class="row mx-auto">
    <%= render 'sidebar' %>
    <div class="col-6">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <th></th>
          <th><b>Title</b></th>
          <th><b>Opinion</b></th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <% if book.user.image.attached? %>
                  <%= image_tag book.user.image, size: "100x100" %>
                <% else %>
                  <%= image_tag 'default-image', size: "100x100" %>
                <% end %>
              </td>
              <td><%=link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
