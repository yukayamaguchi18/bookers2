<% if @range == '2' %>
  <h2>Books search for "<%= @word %>"</h2>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @book.each do |book| %>
        <tr>
          <td>
            <% if book.user.profile_image.attached? %>
              <%= image_tag book.user.profile_image, size: "100x100" %>
            <% else %>
              <%= image_tag 'default-image', size: "100x100" %>
            <% end %>
          </td>
          <td>
            <%= link_to book.title, book, class: "book_#{book.id}" %>
          </td>
          <td><%= book.body %></td>
       </tr>
     <% end %>
    </tbody>
  </table>

<% else %>
  <h2>Users search for "<%= @word %>"</h2>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
     </thead>
     <tbody>
      <% @user.each do |user| %>
        <tr>
          <td>
            <% if user.profile_image.attached? %>
              <%= image_tag user.profile_image, size: "100x100" %>
            <% else %>
              <%= image_tag 'default-image', size: "100x100" %>
            <% end %>
          </td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
        </tr>
      <% end %>
     </tbody>
  </table>
<% end %>
