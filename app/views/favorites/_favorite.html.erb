              <% if book.favorited_by?(current_user) %>
                <p>
                  <%= link_to book_favorites_path(book), method: :delete, style: "color: red;", local: false do %>
                    ♥<%= book.favorites.count %>
                  <% end %>
                </p>
                <% else %>
                <p>
                  <%= link_to book_favorites_path(book), method: :post, local: false do %>
                    ♡<%= book.favorites.count %>
                  <% end %>
                </p>
              <% end %>
